<h1>Sign Up</h1>

<% if flash[:messages] %>
  <h2><%= flash[:messages] %></h2>
<% end %>

<%= form_for @user do |f|%>
  <%= f.label :email%><br>
  <%= f.text_field :email%><br>
  <%= f.label :username%><br>
  <%= f.text_field :username%><br>
  <%= f.label :password%><br>
  <%= f.password_field :password%><br>
  <%= f.submit %>
<%end%>